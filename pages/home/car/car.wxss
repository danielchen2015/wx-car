/* pages/home/car/car.wxss */
page{
  padding: 0 15px;
  width: calc(100% - 30px);
}
.car-swiper{
  height: 400rpx;
}
.slide-image{
  width: 100%;
}
.btn{
  display: flex;
  justify-content: space-between
}
.btn-text{
  width: 47%;
  margin: 15px 0px;
}
.link-btn{
  width: 100%;
}
.car-content{
  background-color: #fff;
  padding: 10px;
  font-size: 13px;
}
.car-c{
  display: flex;
  line-height: 40rpx;
  padding: 8px 0;
  border-bottom: 1px solid #f5f3f3;
  /* flex-direction: column; */
}
.car-title{
  line-height: 50rpx;
}
.car-t{
  width: 200rpx;
}
.img{
  display: flex;
  justify-content: space-between;
  margin-top: 10px;
  }
.img .item{
  width: 45%;
  text-align: center;
}
.img image:last-child{
  /* width: 46%; */
  margin-left: 10px;
}
.ad-img{
  width: 100%;
  height: 340rpx;
  margin-bottom: 20px;
}
.footer-text{
  font-size: 14px;
  text-align: center;
}